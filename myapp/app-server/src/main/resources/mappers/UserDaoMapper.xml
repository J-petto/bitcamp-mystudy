<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserDao">

    <resultMap id="UserMap" type="user">
        <id property="no" column="user_id" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="password" column="pwd" />
        <result property="tel" column="tel" />
    </resultMap>

    <insert id="insert" parameterType="user">
        insert into myapp_users(name, email, pwd, tel)
        values (#{name}, #{email}, sha1(#{password}), #{tel})
    </insert>

    <select id="list" resultMap="UserMap">
        select
            user_id,
            name,
            email
        from
            myapp_users
        order by
            user_id asc
    </select>

    <select id="findBy" resultMap="UserMap" parameterType="int">
        select
            user_id,
            name,
            email,
            tel
        from
            myapp_users
        where
            user_id=#{ok}
    </select>

    <select id="findByEmailAndPassword" resultMap="UserMap" parameterType="map">
        select
            user_id,
            name,
            email,
            tel
        from
            myapp_users
        where
            email=#{email} and pwd=sha1(#{password})
    </select>

    <update id="update" parameterType="user">
        update myapp_users set
        name=#{name},
        email=#{email},
        pwd=sha1(#{password}),
        tel=#{tel}
        where
        user_id=#{no}
    </update>

    <delete id="delete" parameterType="int">
        delete from myapp_users
        where user_id=#{no}
    </delete>
</mapper>